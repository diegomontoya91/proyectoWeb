<p id="notice"><%= notice %></p>

<br>

<h1>Ventas</h1>
  <br>
  <div class="col-sm-3">
    <table class="table table-bordered table-hover table-striped ">
    <thead>
      <tr class="success">
        <th>Código Producto</th>
        <th>Nombre</th>
        <th>Cantidad</th>
        <th>Total</th>
        <th colspan="3">Operaciones</th>
      </tr>
    </thead>

    <tbody>
      <% @sales.each do |sale| %>
        <tr>
          <td><%= sale.codigoProducto %></td>
          <td><%= sale.nombre %></td>
          <td><%= sale.cantidad %></td>
          <td><%= sale.total %></td>
          <td><%= link_to 'Ver', sale %></td>
          <td><%= link_to 'Eliminar', sale, method: :delete, data: { confirm: '¿Estás seguro de eliminar este saleo?' } %></td>
          <td><a href="/cart/<%= sale.id %>">Añadir a la Venta</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

