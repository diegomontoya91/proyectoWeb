<p id="notice"><%= notice %></p>
  <div class="form-group">
    <div class="col-sm-3">
      <%= form_tag products_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search],  class: 'form-control', placeholder: "Buscar..." %>
    </div>
  </div>
  <% end %>
  <br><br>

<h1>Listado de productos</h1>
  <br>
  <table class="table table-bordered table-hover table-striped ">
  <thead>
    <tr class="success">
      <th>Código</th>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th>Proveedor</th>
      <th>Precio Proveedor</th>
      <th colspan="3">Operaciones</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.codigo %></td>
        <td><%= product.nombre %></td>
        <td><%= product.descripcion %></td>
        <td><%= product.cantidad %></td>
        <td><%= product.precio %></td>
        <td><%= product.proveedor %></td>
        <td><%= product.precioProveedor %></td>
        <td><%= link_to 'Ver', product %></td>
        <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: '¿Estás seguro de eliminar este producto?' } %></td>
        <td><a href="/cart/<%= product.id %>">Añadir a la Venta</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Producto', new_product_path %>
